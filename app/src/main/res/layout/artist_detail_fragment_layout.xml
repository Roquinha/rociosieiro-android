<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.search.SearchFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivArtist"
        android:layout_width="@dimen/margin_120dp"
        android:layout_height="@dimen/margin_120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/ivArtist"
        app:layout_constraintStart_toStartOf="@id/ivArtist"
        app:layout_constraintEnd_toEndOf="@id/ivArtist"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="jgdkjgndkgdkfgdfkfdgdfkghdfghdk"
        app:layout_constraintTop_toBottomOf="@id/tvArtist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLessZoom"
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        android:src="@drawable/ic_less"
        app:layout_constraintStart_toStartOf="@id/ivArtist"
        app:layout_constraintTop_toBottomOf="@id/tvGenre"
        app:layout_constraintTop_toTopOf="@id/tvZoom"
        app:layout_constraintBottom_toBottomOf="@id/tvZoom"
        android:layout_marginStart="16dp"/>


    <TextView
        android:id="@+id/tvZoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintStart_toEndOf="@id/ivLessZoom"
        app:layout_constraintEnd_toStartOf="@id/ivMoreZoom"
        app:layout_constraintTop_toBottomOf="@id/tvGenre"
        android:text="@string/zoom" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMoreZoom"
        android:src="@drawable/ic_more"
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        app:layout_constraintEnd_toEndOf="@id/ivArtist"
        app:layout_constraintTop_toTopOf="@id/tvZoom"
        app:layout_constraintBottom_toBottomOf="@id/tvZoom"
        android:layout_marginStart="16dp"/>

    <com.example.applicationrociosieiro.presentation.components.recyclerAlbums.AlbumsRecyclerView
        android:id="@+id/rvAlbums"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvZoom"
        tools:itemCount="10"
        app:spanCount="3"
        tools:listitem="@layout/album_item_layout"/>

    <TextView
        android:id="@+id/tvNoResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/empty_text"
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="gone"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvArtist" />
</androidx.constraintlayout.widget.ConstraintLayout>